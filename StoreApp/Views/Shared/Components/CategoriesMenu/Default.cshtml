@model IEnumerable<Category>

<div class="mt-3">
    <h6 class="lead">
        <i class="fa fa-solid fa-bars text-secondary"></i>
        Categories
    </h6>
</div>

<div class="my-4">
    <ul class="list-group">
        @foreach (var cat in Model)
        {
            <li class="list-group-item">
                <a asp-action="Index" asp-route-categoryId="@cat.CategoryId">
                    @cat.CategoryName
                </a>
            </li>
        }
    </ul>
</div>
<div class="my-3">
    <h6 class="lead">
        <i class="fa fa-filter text-secondary"></i>
        Filters
    </h6>
</div>

<div class="my-2">
    <form method="get" asp-action="Index">
        <input type="hidden" name="categoryId" value="@(Context.Request.Query["categoryId"])" />

        <div class="form-group my-2">
            <input class="form-control" name="SearchTerm" placeholder="Search" />
        </div>

        <div class="form-group my-2">
            <input class="form-control" name="MinPrice" placeholder="Min. Price" />
        </div>

        <div class="form-group my-2">
            <input class="form-control" name="MaxPrice" placeholder="Max. Price" />
        </div>

        <div class="form-group my-2">
            <button type="submit" class="btn btn-sm btn-primary">Filter</button>
        </div>
    </form>
</div>